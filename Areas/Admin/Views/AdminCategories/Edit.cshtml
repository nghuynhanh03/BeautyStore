@model BeautyStore.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Phân loại sản phẩm</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","AdminHome")">Home</a></li>
                <li class="breadcrumb-item active">Phân loại sản phẩm</li>
            </ol>
        </nav>
    </div>

    @using (Html.BeginForm("Edit", "AdminCategories", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CategoryID)
        <label for="topic">Tên danh mục : </label>
        <input value="@Model.CategoryName" class="form-control" style="width:300px" /> <br />
        <div class="box-img-admin">
            <label for="imgInp">Hình ảnh :</label><br />
            <img id="blah" src="~/image/@Model.CategoryImage" alt="" width="200px" /><br /><br />

            <input accept="image/*" type='file' id="imgInp" name="ImgCate" /><br>
        </div><br>
        <div style="margin: 10px 0px;">
            <button type="submit" class="btn btn-success">Lưu</button>
            <a class="btn btn-danger" style="color:#fff">Xóa</a>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>

</main>