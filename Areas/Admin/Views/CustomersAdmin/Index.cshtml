@model IEnumerable<BeautyStore.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Quản lý tài khoản</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","AdminHome")">Home</a></li>
                <li class="breadcrumb-item active">Quản lý tài khoản</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <table class="table">
        <tr>
            <th>
                Tên khách hàng
            </th>
            <th>
                Email
            </th>
            <th>
                Số điện thoại
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.UserID }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.UserID }) |

                </td>
            </tr>
        }
    </table>
    </main>
    <script>
        $(document).ready(function () {
            $(".sub-image img").hover(function () {

            })
        }
    </script>
