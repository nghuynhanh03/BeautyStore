@model IEnumerable<BeautyStore.Models.Product>

@{
    var formatMoney = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<div class="container">
    <!-- breadcumbs -->

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home",null)">Trang chủ</a></li>
        </ol>
    </nav>
    <!-- end-breadcumbs -->
    <!-- slider -->

    <div class="row">
        <div class="col-lg-8">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <a href="#"><img class="d-block w-100" src="~/image/1.jfif" alt="First slide"></a>
                    </div>
                    <div class="carousel-item">
                        <a href="#"><img class="d-block w-100" src="~/image/15.jfif" alt="Second slide"></a>
                    </div>
                    <div class="carousel-item">
                        <a href="#"><img class="d-block w-100" src="~/image/14.jfif" alt="Second slide"></a>
                    </div>

                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-lg-4 advertise">
            <div class="item">
                <a href="#"><img src="~/image/3.jfif" alt=""></a>
            </div>
            <div class="item">
                <a href="#"><img src="~/image/4.jfif" alt=""></a>
            </div>
        </div>
    </div>
    <!-- end-slider -->
    <!-- filter-box -->
    <div class="row">
        <div class="block-filter">
            <div class="filter-content">
                <label class="btn">Mức giá</label>
                <button type="button" class="btn" onclick="location.href = '@Url.Action("Under200lAllProduct/"+0,"FiltProduct")'">Dưới 200k</button>
                <button type="button" class="btn" onclick="location.href = '@Url.Action("From200To400AllProduct/"+0,"FiltProduct")'">Từ 200k đến 400k</button>
                <button type="button" class="btn" onclick="location.href = '@Url.Action("From400To600AllProduct/"+0,"FiltProduct")'">Từ 400k đến 600k</button>
                <button type="button" class="btn" onclick="location.href = '@Url.Action("Over600AllProduct/"+0,"FiltProduct")'">Trên 600k</button>
            </div>

            <div class="filter-content">
                <label class="btn"> Sắp xếp theo</label>
                <button type="button" class="btn" onclick="location.href = '@Url.Action("IncreaseWithPrice/"+0,"FiltProduct")'"><i class="bi bi-sort-down-alt"></i> Giá thấp - cao</button>
                <button type="button" class="btn" onclick="location.href = '@Url.Action("DescreaseWithPrice/"+0,"FiltProduct")'"><i class="bi bi-sort-up"></i> Giá cao - thấp</button>

            </div>
        </div>
    </div>
    <!-- end-filter-box -->
    <!-- category product -->
    <div class="product-list category-product">
        <div class="product-head">
            <h3>
                Tất cả sản phẩm @if (ViewBag.IdCategory != 0)
                {@ViewBag.CategoryProd.CategoryName} dưới 200k
            </h3>

        </div>
        <div class="row product-list-items">

            @if (Model.Count() != 0)
            {
                foreach (var item in Model)
                {
                    <!-- product1 -->
                    <div class="element col-lg-3 col-md-4">
                        <a href="@Url.Action("Index/"+ item.ProductID,"Details" )">
                            <div class="card">
                                <img class="card-img-top" src="~/image/@item.Image1" alt="Card image cap" style="height:235px">
                                <div class="card-body">
                                    <div class="product-name">
                                        <p class="card-text">@item.ProductName </p>
                                    </div><br />
                                    <h6 class="initial-price">@String.Format(formatMoney, "{0:c0}", item.IntialPrice)</h6>
                                    <h5>@String.Format(formatMoney, "{0:c0}", item.Price)</h5>
                                    @if (item.amount < 1)
                                    {
                                        <div class="sold-out-label">
                                            <img src="~/Image/download.png" alt="">
                                            <p>Hết hàng</p>
                                        </div>
                                    }

                                    <span class="rating">
                                        <i class="ri-star-fill"></i>
                                        <i class="ri-star-fill"></i>
                                        <i class="ri-star-fill"></i>
                                        <i class="ri-star-fill"></i>
                                        <i class="ri-star-fill"></i>
                                    </span>
                                    <button class="love-product"><i class="ri-heart-3-fill"></i></button>

                                </div>
                            </div>
                        </a>
                    </div>
                    <!-- end-product1 -->
                }
            }
            else
            {
                <h3 style="margin:20px;text-align:center;color:gray">Không có sản phẩm nào</h3>
            }
        </div>

    </div>

</div>

